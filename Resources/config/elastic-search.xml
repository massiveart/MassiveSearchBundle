<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="massive_search.search.adapter.elastic_search_client">Elasticsearch\Client</parameter>
        <parameter key="massive_search.search.adapter.elastic_search">Massive\Bundle\SearchBundle\Search\Adapter\ElasticSearchAdapter</parameter>
    </parameters>

    <services>
        <!-- Adapter -->
        <service id="massive_search.adapter.elastic_search" class="%massive_search.search.adapter.elastic_search.class%">
            <argument type="service" id="massive_search.factory" />
            <argument type="service" id="massive_search.adapter.elastic_search_client" />
        </service>

        <!-- Client -->
        <service id="massive_search.adapter.elastic_search_client" class="%massive_search.search.adapter.elastic_search_client.class%" />

    </services>
</container>


